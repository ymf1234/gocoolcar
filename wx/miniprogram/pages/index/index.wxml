<map 
  id="map"
  latitude="{{location.latitude}}"
  longitude="{{location.longitude}}"
  scale="{{scale}}"
  setting="{{setting}}"
  enable-overlooking="{{isOverLooking}}" 
  enable-3D="{{is3D}}"
  markers="{{markers}}"
>
  <view class="icon-container">
    <cover-image  class="round" src="{{avatarURL ? avatar : '/resources/account.png'}}" bindtap="onMyTripsTap"></cover-image>
    <cover-image src="/resources/my_location.png" bindtap="onMyLocationTap"></cover-image>
  </view >

  <view class="btn-container bg-grey round" bindtap="onScanTap">
      <view>扫码租车</view>
  </view>
</map>
<modal showCancel="{{showCancel}}" showModal="{{showModal}}" title="身份证" contents="需要身份证认证才能租车" bindok="">
</modal>